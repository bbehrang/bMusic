<div class="bodyBackground">

</div>
<div class="bgOverlay"></div>

  <% layout('layout/layout') -%>
    <section class="indexBody bodyContent">
      <div class="total">
        Your Total<br />
        <% if(total){ %>
          <span><%=total%> $</span>
        <%}  %>
      </div>
      <div id="charge-error" class="alert alert-danger hidden"></div>

      <form style="float:right;" id="checkoutform" class="forms" method="post" action="/checkout" data-parsley-validate="">
        <div class="form-group">
          <label class="loginLabels" for="name">Full name :</label>
          <input id="name" type="text" class="form-control" name="name" placeholder="Enter Full name..." required="">
        </div>
        <div class="form-group">
          <label class="loginLabels" for="card">Card number :</label>
          <input id="card" type="text" class="form-control" name="card" placeholder="Card number..." required="">
        </div>
        <div class="form-group">
          <label class="loginLabels" for="cvc">CVC :</label>
          <input id="cvc" type="text" class="form-control" name="cvc" placeholder="CVC..." required="">
        </div>
        <div class="form-group">
          <label class="loginLabels halfLable" for="exp_month">Expiration date :</label>
          <input  id="exp_month" type="text" class="form-control" name="exp_month" placeholder="mm..." required="">
          <input  id="exp_year" type="text" class="form-control" name="exp_year" placeholder="yy..." required="">

        </div>
        <button type="submit" class="btn btn-default submit">Submit</button>
      </form>
    </section>
