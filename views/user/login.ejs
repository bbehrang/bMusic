<div class="bodyBackground">

</div>
<% layout('layout/layout') -%>
<section class="indexBody bodyContent">
      <div class="row">
        <div class="alertContainer">
          <% if(success_msg != '') {%>
              <div class="alert alert-success"><%=success_msg%></div>
          <%} %>
          <% if(error_msg != '') {%>
              <div class="alert alert-danger"><%=error_msg%></div>
          <%} %>
            <% if(error != '') {%>
            <div class="alert alert-danger"><%=error%></div>
            <%} %>

          <% if(typeof errors != 'undefined'){ %>
            <% errors.forEach(function(elements){ %>
              <div class="alert alert-danger"><%= elements.msg %></div>
            <%}); %>

          <%} %>

            <form id="userLogin" method="post" action="/users/login">
              <div class="form-group">
                <label class="loginLabels" for="username">Username</label>
                <input id="username" type="text" class="form-control" name="username" placeholder="Username">
              </div>
              <div class="form-group">
                <label class="loginLabels" for="password">Password</label>
                <input id="password" type="password" class="form-control password" name="password" placeholder="Password">
              </div>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
      </div>
    </section>
      <script>
      $(document).ready(function(){
        $(".bodyBackground").css({"background":"url('/media/img/login.jpg')","background-size": "100%"});

      })
        </script>
